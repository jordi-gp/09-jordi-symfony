{% extends 'default.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
<div class="d-flex d-flex-row justify-content-center mt-2 mb-4">
    <div class="col-6 col-md-4">
        <form method="post" novalidate="novalidate">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="d-grid gap-3">
                <div>
                    <h1 class="h3 mb-3 font-weight-normal">Inicia Sessi√≥</h1>
                    <label for="inputUsername">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                </div>
                <div>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div>
                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </div>
                <div>
                    <p>No tens compter? Doncs <a href="{{ path('register') }}">registra't</a></p>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
