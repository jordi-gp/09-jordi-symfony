{% extends 'backoffice.html.twig' %}
{% block title %}Backoffice - Editar Usuari{% endblock %}
{% block main %}
    {% if usuario.id %}
        <div class="d-flex flex-row justify-content-center mt-2 mb-4">
            <div class="col-3"></div>
            <div class="col-6 col-md-4">
                <h3>Actualitza el rol d'usuari</h3>
                {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}
                    {{ form_row(form.role) }}
                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" value="Actualitzar" />
                    </div>
                {{ form_end(form) }}
            </div>
            <div class="col-3"></div>
        </div>
    {% else %}
        <p>No existeix un usuari amb el id indicat</p>
    {% endif %}
{% endblock %}