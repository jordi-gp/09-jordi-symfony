{% extends 'default.html.twig' %}

{% block title %}Hello VinilController!{% endblock %}

{% block main %}
    <div class="container-fluid pb-4 d-flex col-12">
        <div class="col-2"></div>
        <div class="col-8 d-flex flex-row mt-4 justify-content-center" style="flex-wrap: wrap; border-radius: 10px; background: #AAAAAA">
            <div class="col-6">
                <img src="{{ asset( 'assets/' ~ vinilo.cover ) }}" style="width: 400px; height: 400px; border-radius: 10px; border: 1px solid black;"  alt="Vinil Cover" />
            </div>
            <div class="col-6 d-flex mt-4 flex-column">
                <h3 class="text-center">Informació del vinil</h3>
                <ul class="mt-4">
                    <li>
                        Artista: {{ vinilo.artista.name }}
                    </li>
                    <li>
                        Preu: {{ vinilo.price }}€
                    </li>
                    <li>
                        Valoracio: {{ vinilo.rating }}
                    </li>
                    <li>
                        Genere: Per fer
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
    <div class="container-fluid col-6 d-flex justify-content-center flex-column">
        <h3>Comentaris</h3>
        {% if app.user %}

        {% else %}
            <p>
                <a href="{{ path('login') }}">Inicia sessió</a> per poder posar i vore comentaris o <a href="{{ path('register') }}">registra't</a> si no tens un compter.
            </p>
        {% endif %}
    </div>
{% endblock %}
